: ${IP_ADDR:="${SERVER%%\/*}"}
: ${GATEWAY:="$IP_ADDR"}

cat <<-EOF >$ROOT/etc/network/interfaces
	auto lo
	iface lo inet loopback

	auto eth0
	iface eth0 inet dhcp

	auto wlan0
	iface wlan0 inet manual

	allow-hotplug eth1
	iface eth1 inet dhcp

	auto br0
	bridge_ports
	iface br0 inet static
	address $SERVER
	gateway $GATEWAY

EOF
